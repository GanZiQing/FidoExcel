<UserControl x:Class="ExcelAddIn2.Timer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelAddIn2"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <ProgressBar x:Name="ThisProgressBar" HorizontalAlignment="Left" Height="28" Margin="25,28,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="RunButton" Content="Run" HorizontalAlignment="Left" Height="25" Margin="90,63,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.368,1.286" Click="RunButton_Click"/>
        <TextBlock x:Name="ProgressTextBlock" HorizontalAlignment="Left" Height="18" Margin="25,5,0,0" TextWrapping="Wrap" Text="Loading" VerticalAlignment="Top" Width="200"/>
    </Grid>
</UserControl>
